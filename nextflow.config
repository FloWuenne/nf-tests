manifest.name = "Unzip and zip benchmark"

params.infile = 's3://ngi-igenomes/test-data/airrflow/pcr_umi/SRR1383455_Subject_M4_brain_lesion_section_2_2.fastq.gz'
params.md5 = '4230d2169f6875176cff9c8f3cc708e4'

workDir = 's3://fusion-develop/scratch'
wave.enabled = true

fusion {
  enabled = true
}

process {
  container = 'quay.io/nextflow/bash'
  scratch = false
}

docker {
  enabled = true
  runOptions = '-v $HOME/.aws/credentials:/credentials -e AWS_SHARED_CREDENTIALS_FILE=/credentials'
  envWhitelist = 'AWS_PROFILE'
}

profiles {

  big {
    // 32GB FASTQ Gzip file
    params.infile = 's3://ngi-igenomes/test-data/hicar/WT_rep1_R2.fastq.gz'
    params.md5 = ''
  }

}

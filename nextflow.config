params.files = 100

process.container = 'quay.io/nextflow/bash'

profiles {
  minio {
    docker.enabled = true
    docker.envWhitelist = 'AWS_ACCESS_KEY_ID,AWS_SECRET_ACCESS_KEY'
    aws.client.endpoint = 'http://172.17.0.1:9000'
    aws.client.s3PathStyleAccess = true
  }
 
  fusion {
    fusion.enabled = true
    wave.enabled = true
    process.scratch = false
  }    
}

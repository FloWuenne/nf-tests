wave.enabled = true
wave.strategy = ['conda']
fusion.enabled = true
process.scratch = false
conda.channels = 'conda-forge,bioconda,defaults'

profiles {
  local {
    process.cpus = 4
    docker.enabled = true
    docker.runOptions = '-v $HOME/.aws/credentials:/credentials -e AWS_SHARED_CREDENTIALS_FILE=/credentials'
  }
  
  aws {
    params.total = 10
    process.cpus = 12
    process.memory = 72.GB
  }
}

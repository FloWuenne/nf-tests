manifest.name = "Unzip and zip benchmark"

// Small example
params.infile = 's3://ngi-igenomes/test-data/airrflow/pcr_umi/SRR1383455_Subject_M4_brain_lesion_section_2_2.fastq.gz'  // size = 11MB
params.md5 = '4230d2169f6875176cff9c8f3cc708e4'

workDir = 's3://fusion-develop/scratch'
wave.enabled = true

fusion {
  enabled = true
}

process {
  container = 'quay.io/nextflow/bash'
  scratch = false
}

docker {
  enabled = true
  runOptions = '-v $HOME/.aws/credentials:/credentials -e AWS_SHARED_CREDENTIALS_FILE=/credentials'
  envWhitelist = 'AWS_PROFILE'
}

profiles {

  medium {
    params.infile = 's3://ngi-igenomes/test-data/viralrecon/sample1_R2.fastq.gz'   // size = 226MB
    params.md5 = 'c805baf5181dc0f9be059b9cb722481a'
  }

  big {
    params.infile = 's3://ngi-igenomes/test-data/rnaseq/SRX1603393_T1_2.fastq.gz'  // size = 8.9GB
    params.md5 = 'b23e23639258c93944ff9a64b08b9f67'
  }

  verybig {
    params.infile = 's3://ngi-igenomes/test-data/sarek/NA12878_2.merged.fastq.gz'  // size = 44GB
    params.md5 = ''
  }

}

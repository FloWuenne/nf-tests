process {
  container = 'quay.io/nextflow/bash'
}

manifest {
    defaultBranch = 'main'
}

wave {
  enabled = true
}

fusion {
  enabled = true
  containerConfigUrl = 'https://fusionfs.seqera.io/releases/v2.4-amd64.json' 
}

profiles {
  
  local {
    docker {
      enabled = true
      runOptions = '-v $HOME/.aws/credentials:/credentials -e AWS_SHARED_CREDENTIALS_FILE=/credentials'
    }
  }

}
